################################################################################

# Controlador de Dominio
function menu04 {
menu09 samba-ad-dc && smb2=$prcs
[ "$smb2" = "Executando" ] && {
  var4=$(dialog --title 'AD-DC' --backtitle "Active Directory & Domain Controller" --menu " " 0 0 0 \
  A 'Gestão de Usuários' \
  B 'Gestão de Grupos' \
  C 'Gestão de Computadores' \
  D 'Informações do Domínio' \
  X 'Voltar' 2>&1 > /dev/tty )
  [ $? -ne 0 ] && liminal "st4rt1" "start"
  case "$var4" in
  A) menu041 ;;
  B) menu042 ;;
  C) menu043 ;;
  D) menuR ;;
  X) liminal "st4rt1" "start" ;;
  esac
} || {
  dialog --cr-wrap --title 'ERRO DETECTADO' --backtitle "Active Directory & Domain Controller" --msgbox "O Controlador de Domínio não foi encontrado neste sistema ou você não tem as permissões adequadas para acessar as ferramentas!" 7 50
  }

liminal "st4rt1" "start"
}

