    [ $? = 0 ] && {
        echo "$1" >> "/home/$USER/.DOC/$datetime3.docx"
        }
      } || {
        m10
      }
  } || {
    dialog --title 'relat.docx' --msgbox "Arquivo não encontrado. Abortando." 8 30
    m10
    }
}

