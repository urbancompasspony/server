#!/bin/bash

function init {
var0=$(dialog --title 'Linite' --backtitle "L I N I T E" --menu " " 0 0 0 \
A 'Virtual' \
B 'Essentials' \
C 'Server' \
D 'Server (SoC)' \
E 'to VM Guest' \
F 'Desktop' \
G 'Multimedia' \
H 'Games' \
I 'Docker Menu' \
J 'Dcoker Orchestration' \
X 'SAIR' 2>&1 > /dev/tty )

case "$var0" in

A) virtual ;;
B) essentials ;;
C) servers ;;
D) vmsoc ;;
E) vm ;;
F) desktop ;;
G) multim ;;
H) games ;;
I) curl -sSL https://raw.githubusercontent.com/urbancompasspony/server/main/docker | bash ;;
J) curl -sSL https://raw.githubusercontent.com/urbancompasspony/server/main/orchestration | bash ;;
X) echo "Saindo..." && exit && break ;;
esac

}

init
