var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'NextCloud (W)' \
2 'OnlyOffice (W)' \
3 'Reverse Proxy (W)' \
4 'UniFi (W)' \
5 'Spark [OpenFire] (W)' \
6 'RustDesk (W)' \
7 'RustDesk WebUI (W)' \
8 'Syncthing Client (L/W)' \
9 'MySQL (W)' \
10 'MariaDB (W)' \
11 'Firebird (W)' \
12 'OracleXE 21C (W)' \
13 'PHPMyAdmin (L)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) wget "$github"26-nextcloud -O /tmp/nextcloud; sudo bash /tmp/nextcloud ;;
2) wget "$github"34-onlyoffice -O /tmp/ooffice; sudo bash /tmp/ooffice ;;
3) wget "$github"33-reverseproxy -O /tmp/apacherp; sudo bash /tmp/apacherp ;;
4) wget "$github"03-unifi -O /tmp/unifi; sudo bash /tmp/unifi ;;
5) wget "$github"27-openfire -O /tmp/openfire; sudo bash /tmp/openfire ;;
6) wget "$github"31-rustdesk -O /tmp/rustdesk; sudo bash /tmp/rustdesk ;;
7) wget "$github"24-rustdesk-web -O /tmp/deskweb; sudo bash /tmp/deskweb ;;
8) wget "$github"42.0-syncthing -O /tmp/syncthing; sudo bash /tmp/syncthing ;;
9) wget "$github"04-mysql -O /tmp/mysql; sudo bash /tmp/mysql ;;
10) wget "$github"29-mariadb -O /tmp/mariadb; sudo bash /tmp/mariadb ;;
11) wget "$github"49-firebird -O /tmp/firebird; sudo bash /tmp/firebird ;;
12) wget "$github"05-oracle_xe -O /tmp/oracle_xe; sudo bash /tmp/oracle_xe ;;
13) wget "$github"48-phpmyadmin -O /tmp/phpmyadmin; sudo bash /tmp/phpmyadmin ;;
X) echo "." > /dev/null ;;
esac
}

function others {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'SSH DW Service (L)' \
2 'Apache Standalone (W)' \
3 'FTP Standalone (W)' \
4 'CUPS Standalone (W)' \
5 'SAMBA Standalone (L/W)' \
6 'Ollama: IA    (A) (L)' \
7 'Ollama: WebUI (B) (L)' \
8 'Altus: Whatsapp (W)' \
9 'Ferdium: RAMBOX-like (W)' \
10 'GLPI (W)' \
11 'ntfy (W)' \
12 'Portainer (L/W)' \
13 'Netboot PXE (W)' \
14 'File Browser (L/W)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) wget "$github"38-ssh-dw -O /tmp/ssho; sudo bash /tmp/ssho ;;
2) wget "$github"36-generic_apache -O /tmp/genericapache; sudo bash /tmp/genericapache ;;
3) wget "$github"37-ftp-server -O /tmp/ftp-server; sudo bash /tmp/ftp-server ;;
4) wget "$github"10-cups -O /tmp/cups; sudo bash /tmp/cups ;;
5) wget "$github"06-samba -O /tmp/samba; sudo bash /tmp/samba ;;
6) wget "$github"51-ollama-ia -O /tmp/ollamaia; sudo bash /tmp/ollamaia ;;
7) wget "$github"52-ollama-GUI -O /tmp/ollamaweb; sudo bash /tmp/ollamaweb ;;
8) wget "$github"35-altus-whatsapp -O /tmp/altus; sudo bash /tmp/altus ;;
9) wget "$github"25-ferdium -O /tmp/ferdium; sudo bash /tmp/ferdium ;;
10) wget "$github"40-glpi -O /tmp/glpi; sudo bash /tmp/glpi ;;
11) wget "$github"30-ntfy_server -O /tmp/ntfy_server; sudo bash /tmp/ntfy_server ;;
12) wget "$github"22-portainer-docker-ui -O /tmp/portainer; sudo bash /tmp/portainer ;;
13) wget "$github"23-netboot-xyz -O /tmp/netboot; sudo bash /tmp/netboot ;;
14) wget "$github"28-filebrowser -O /tmp/filebrowser; sudo bash /tmp/filebrowser ;;
X) echo "." > /dev/null ;;
esac
}

function misc {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'Windows (VM) (L/W)' \
2 'Tmate Server (L)' \
3 'macOS (VM) (L)' \
4 'Registry' \
5 'TOR privoxy' \
6 'DD Client' \
7 'Remotely (W)' \
8 'Rocket.Chat (W)' \
9 'Android (VM) (L)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) wget "$github"17-windows -O /tmp/windows; sudo bash /tmp/windows ;;
2) wget "$github"18-tmate -O /tmp/tmate; sudo bash /tmp/tmate ;;
3) wget "$github"39-macOS -O /tmp/macOS; sudo bash /tmp/macOS ;;
4) wget "$github"43-registry -O /tmp/registry; sudo bash /tmp/registry ;;
5) wget "$github"53-tor-privoxy -O /tmp/privoxy; sudo bash /tmp/privoxy ;;
6) wget "$github"55-ddclient -O /tmp/ddclient; sudo bash /tmp/ddclient ;;
7) wget "$github"59-remotely -O /tmp/remotely; sudo bash /tmp/remotely ;;
8) wget "$github"65-rocketchat -O /tmp/rocketchat; sudo bash /tmp/rocketchat ;;
9) wget "$github"32-redroid -O /tmp/redroid; sudo bash /tmp/redroid ;;
X) echo "." > /dev/null ;;
esac
}

function contratos {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'Scrutiny SMART (W)' \
2 'SSH Tunnel (A) (W)' \
3 'WeTTY      (B) (W)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) wget "$github"14-scrutiny -O /tmp/scrutiny; sudo bash /tmp/scrutiny ;;
2) wget "$github"63-ssh-tunnel-A -O /tmp/ssh-tunnel; sudo bash /tmp/ssh-tunnel ;;
3) wget "$github"46-wetty-B -O /tmp/wetty; sudo bash /tmp/wetty ;;
X) echo "." > /dev/null ;;
esac
}

###############
# START HERE! #
###############

[ -f /srv/containers/scripts/myip ] && {
  macvland
  start
} || {
  IPMachine=$(ip route get 1.1.1.1 | grep -oP 'src \K\S+')
  MyIPNF=$(dialog --title 'MyIP!' --backtitle "Sugestão: $IPMachine" --inputbox "Este IP não foi definido. \nQual o IP deste Servidor?" 10 40 2>&1 > /dev/tty)
  sudo mkdir -p /srv/containers/scripts/config

  sudo touch /srv/containers/scripts/config/backupcont
  echo "source" > /srv/containers/scripts/config/backupcont
  echo "destiny" >> /srv/containers/scripts/config/backupcont
  echo "mountpoint" >> /srv/containers/scripts/config/backupcont
  echo "UUID" >> /srv/containers/scripts/config/backupcont

  wget "https://raw.githubusercontent.com/urbancompasspony/docker/main/Backup/01-Backup"
  cat 01-Backup | sudo tee /srv/containers/scripts/backupcont
  sudo rm -r 01-Backup

  wget "https://raw.githubusercontent.com/urbancompasspony/linux.cheat.sheet/main/rsnapshot.conf"
  cat rsnapshot.conf | sudo tee /srv/containers/scripts/rsnapshot
  sudo rm -r rsnapshot.conf

  sudo touch /srv/containers/scripts/myip
  echo "$MyIPNF" | sudo tee /srv/containers/scripts/myip

  macvland
  start
}
