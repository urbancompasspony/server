#!/bin/bash

# NEXTCLOUD VERSION:
nv="25"

# For Ubuntu 22.04!
export NEEDRESTART_MODE=a
export DEBIAN_FRONTEND=noninteractive

export var1; export var2

mTITLE="Docker Orchestration"
bkTTITLE="Sistema Automatizado de Orquestração de Containers"

github="https://raw.githubusercontent.com/urbancompasspony/docker/main/"

function start {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'Essentials' \
2 'Servers' \
3 'DataBases' \
4 'Contratos' \
5 'Others' \
6 'Not Tested!' \
X 'Sair' 2>&1 > /dev/tty )
case "$var0" in
1) essentials ; start ;;
2) servers ; start ;;
3) database ; start ;;
4) contratos ; start ;;
5) others ; start ;;
6) misc ; start ;;
X) exit ;;
esac
}

function essentials {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'PiHole (L/W)' \
2 'Dominio (4.15) (W)' \
3 'Dominio (4.19) (W)' \
4 'Pentest (L/W)' \
5 'XPRA VMs (L/W)' \
6 'MySpeed Test WAN (L/W)' \
7 'OpenSpeedTest LAN (W)' \
8 'Uptime Kuma (L/W)' \
9 'Homarr Dashboard (L/W)' \
10 'DashDot SysMon (L/W)' \
11 'SSH Tunnel (A) (W)' \
12 'WeTTY      (B) (W)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) wget "$github"01-pihole -O /tmp/pihole; sudo bash /tmp/pihole ;;
2) wget "$github"02-domain -O /tmp/domain; sudo bash /tmp/domain ;;
3) wget "$github"58-domain-test -O /tmp/domain-test; sudo bash /tmp/domain-test ;;
4) wget "$github"09-pentest -O /tmp/pentest; sudo bash /tmp/pentest ;;
5) wget "$github"45-xpra-virt-manager -O /tmp/45-xpra-virt-manager; sudo bash /tmp/45-xpra-virt-manager ;;
6) wget "$github"20-myspeed-tracker -O /tmp/myspeed; sudo bash /tmp/myspeed ;;
7) wget "$github"16-openspeedtest -O /tmp/speedtest; sudo bash /tmp/speedtest ;;
8) wget "$github"15-kuma -O /tmp/kuma; sudo bash /tmp/kuma ;;
9) wget "$github"60-homarr -O /tmp/homarr; sudo bash /tmp/homarr ;;
10) wget "$github"61-dashdot -O /tmp/dashdot; sudo bash /tmp/dashdot ;;
11) wget "$github"63-ssh-tunnel-A -O /tmp/ssh-tunnel; sudo bash /tmp/ssh-tunnel ;;
12) wget "$github"46-wetty-B -O /tmp/wetty; sudo bash /tmp/wetty ;;
X) echo "." > /dev/null ;;
esac
}

function servers {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'NextCloud (W)' \
2 'OnlyOffice (W)' \
3 'Reverse Proxy (W)' \
4 'UniFi (W)' \
5 'Spark [OpenFire] (W)' \
6 'RustDesk (W)' \
7 'RustDesk WebUI (W)' \
8 'Syncthing Client (L/W)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) wget "$github"26-nextcloud -O /tmp/nextcloud; sudo bash /tmp/nextcloud ;;
2) wget "$github"34-onlyoffice -O /tmp/ooffice; sudo bash /tmp/ooffice ;;
3) wget "$github"33-reverseproxy -O /tmp/apacherp; sudo bash /tmp/apacherp ;;
4) wget "$github"03-unifi -O /tmp/unifi; sudo bash /tmp/unifi ;;
5) wget "$github"27-openfire -O /tmp/openfire; sudo bash /tmp/openfire ;;
6) wget "$github"31-rustdesk -O /tmp/rustdesk; sudo bash /tmp/rustdesk ;;
7) wget "$github"24-rustdesk-web -O /tmp/deskweb; sudo bash /tmp/deskweb ;;
8) wget "$github"42.0-syncthing -O /tmp/syncthing; sudo bash /tmp/syncthing ;;
X) echo "." > /dev/null ;;
esac
}

function others {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'SSH DW: Backdoor (L)' \
2 'Apache2 Standalone (W)' \
3 'FTP Server Standalone (W)' \
4 'Ollama: IA (L)' \
5 'Ollama: WebUI (L)' \
6 'Altus: Whatsapp (W)' \
7 'Ferdium: RAMBOX-like (W)' \
8 'GLPI (W)' \
9 'ntfy (W)' \
10 'Portainer (L/W)' \
11 'Netboot PXE (W)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) wget "$github"38-ssh-dw -O /tmp/ssho; sudo bash /tmp/ssho ;;
2) wget "$github"36-generic_apache -O /tmp/genericapache; sudo bash /tmp/genericapache ;;
3) wget "$github"37-ftp-server -O /tmp/ftp-server; sudo bash /tmp/ftp-server ;;
4) wget "$github"51-ollama-ia -O /tmp/ollamaia; sudo bash /tmp/ollamaia ;;
5) wget "$github"52-ollama-GUI -O /tmp/ollamaweb; sudo bash /tmp/ollamaweb ;;
6) wget "$github"35-altus-whatsapp -O /tmp/altus; sudo bash /tmp/altus ;;
7) wget "$github"25-ferdium -O /tmp/ferdium; sudo bash /tmp/ferdium ;;
8) wget "$github"40-glpi -O /tmp/glpi; sudo bash /tmp/glpi ;;
9) wget "$github"30-ntfy_server -O /tmp/ntfy_server; sudo bash /tmp/ntfy_server ;;
10) wget "$github"22-portainer-docker-ui -O /tmp/portainer; sudo bash /tmp/portainer ;;
11) wget "$github"23-netboot-xyz -O /tmp/netboot; sudo bash /tmp/netboot ;;
X) echo "." > /dev/null ;;
esac
}

function misc {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'LAN Cache' \
2 'Windows VMs (L/W)' \
3 'FileBrowser' \
4 'Tmate Server (L)' \
5 'macOS VM' \
6 'Registry' \
7 'TOR privoxy' \
8 'DD Client' \
9 'CUPS Standalone (W)' \
10 'Remotely (W)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) wget "$github"11-lancache -O /tmp/lancache; sudo bash /tmp/lancache ;;
2) wget "$github"17-windows -O /tmp/windows; sudo bash /tmp/windows ;;
3) wget "$github"28-filebrowser -O /tmp/filebrowser; sudo bash /tmp/filebrowser ;;
4) wget "$github"18-tmate -O /tmp/tmate; sudo bash /tmp/tmate ;;
5) wget "$github"39-macOS -O /tmp/macOS; sudo bash /tmp/macOS ;;
6) wget "$github"43-registry -O /tmp/registry; sudo bash /tmp/registry ;;
7) wget "$github"53-tor-privoxy -O /tmp/privoxy; sudo bash /tmp/privoxy ;;
8) wget "$github"55-ddclient -O /tmp/ddclient; sudo bash /tmp/ddclient ;;
9) wget "$github"10-cups -O /tmp/cupsd; sudo bash /tmp/cupsd ;;
10) wget "$github"59-remotely -O /tmp/remotely; sudo bash /tmp/remotely ;;
X) echo "." > /dev/null ;;
esac
}

function contratos {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'Scrutiny SMART (W)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) wget "$github"14-scrutiny -O /tmp/scrutiny; sudo bash /tmp/scrutiny ;;
X) echo "." > /dev/null ;;
esac
}

function database {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'MySQL (W)' \
2 'MariaDB (W)' \
3 'OracleXE 21C (W)' \
4 'Firebird (W)' \
5 'PHPMyAdmin (L)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) wget "$github"04-mysql -O /tmp/mysql; sudo bash /tmp/mysql ;;
2) wget "$github"29-mariadb -O /tmp/mariadb; sudo bash /tmp/mariadb ;;
3) wget "$github"05-oracle_xe -O /tmp/oracle_xe; sudo bash /tmp/oracle_xe ;;
4) wget "$github"49-firebird -O /tmp/firebird; sudo bash /tmp/firebird ;;
5) wget "$github"48-phpmyadmin -O /tmp/phpmyadmin; sudo bash /tmp/phpmyadmin ;;
X) echo "." > /dev/null ;;
esac
}

###############
# START HERE! #
###############

[ -f /srv/containers/scripts/myip ] && {
  macvland
  start
} || {
  IPMachine=$(ip route get 1.1.1.1 | grep -oP 'src \K\S+')
  MyIPNF=$(dialog --title 'MyIP!' --backtitle "Sugestão: $IPMachine" --inputbox "Este IP não foi definido. \nQual o IP deste Servidor?" 10 40 2>&1 > /dev/tty)
  sudo mkdir -p /srv/containers/scripts/config

  sudo touch /srv/containers/scripts/config/backupcont
  echo "source" > /srv/containers/scripts/config/backupcont
  echo "destiny" >> /srv/containers/scripts/config/backupcont
  echo "mountpoint" >> /srv/containers/scripts/config/backupcont
  echo "UUID" >> /srv/containers/scripts/config/backupcont

  wget "https://raw.githubusercontent.com/urbancompasspony/docker/main/Backup/01-Backup"
  cat 01-Backup | sudo tee /srv/containers/scripts/backupcont
  sudo rm -r 01-Backup

  wget "https://raw.githubusercontent.com/urbancompasspony/linux.cheat.sheet/main/rsnapshot.conf"
  cat rsnapshot.conf | sudo tee /srv/containers/scripts/rsnapshot
  sudo rm -r rsnapshot.conf

  sudo touch /srv/containers/scripts/myip
  echo "$MyIPNF" | sudo tee /srv/containers/scripts/myip

  macvland
  start
}
