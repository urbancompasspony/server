#!/bin/bash

# NEXTCLOUD VERSION:
nv="25"

# For Ubuntu 22.04!
export NEEDRESTART_MODE=a
export DEBIAN_FRONTEND=noninteractive

export var1; export var2

mTITLE="Docker Orchestration"
bkTTITLE="Sistema Automatizado de Orquestração de Containers"

github="https://raw.githubusercontent.com/urbancompasspony/docker/main/"

function start {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'Modelo Padrão' \
2 'Serviços' \
3 'Contratos' \
4 'Outros' \
5 'Experimental' \
X 'Sair' 2>&1 > /dev/tty )
case "$var0" in
1) essentials ; start ;;
2) servers ; start ;;
3) contratos ; start ;;
4) others ; start ;;
5) misc ; start ;;
X) exit ;;
esac
}

function essentials {
var0=$(dialog --title "$mTITLE" --backtitle "$bkTTITLE" --menu " " 0 0 0 \
1 'PiHole (L/W)' \
2 'Dominio (4.15) (W)' \
3 'Dominio (4.19) (W)' \
4 'Pentest (L/W)' \
5 'XPRA VMs (L/W)' \
6 'MySpeed Test WAN (L/W)' \
7 'OpenSpeedTest LAN (W)' \
8 'Kuma (L/W)' \
9 'DashDot (L/W)' \
10 'Homarr Dashboard (L/W)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) wget "$github"01-pihole -O /tmp/pihole; sudo bash /tmp/pihole ;;
2) wget "$github"02-domain -O /tmp/domain; sudo bash /tmp/domain ;;
3) wget "$github"58-domain-test -O /tmp/domain-test; sudo bash /tmp/domain-test ;;
4) wget "$github"09-pentest -O /tmp/pentest; sudo bash /tmp/pentest ;;
5) wget "$github"45-xpra-virt-manager -O /tmp/45-xpra-virt-manager; sudo bash /tmp/45-xpra-virt-manager ;;
6) wget "$github"20-myspeed-tracker -O /tmp/myspeed; sudo bash /tmp/myspeed ;;
7) wget "$github"16-openspeedtest -O /tmp/speedtest; sudo bash /tmp/speedtest ;;
8) wget "$github"15-kuma -O /tmp/kuma; sudo bash /tmp/kuma ;;
9) wget "$github"61-dashdot -O /tmp/dashdot; sudo bash /tmp/dashdot ;;
10) wget "$github"60-homarr -O /tmp/homarr; sudo bash /tmp/homarr ;;
X) echo "." > /dev/null ;;
esac
}

