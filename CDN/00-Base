#!/bin/bash

function urgencies0 {
var0=$(dialog --title 'Modelo CDN' --backtitle "Continuidade do Negocio" --ok-label "Acessar" --cancel-label "Voltar" --menu " " 0 0 0 \
1 'Restaurar Containers Localmente' \
2 'Download Backups de Containers da Nuvem' \
3 'Backup A: Imediato do Sistema (+ Firewall)' \
4 'Backup B: Outras VMs (- Firewall)' \
5 'Refazer A: Base do Servidor (+ Firewall)' \
6 'Refazer B: Outras VMs (- Firewall)' \
X '<' 2>&1 > /dev/tty )
case "$var0" in
1) clear ; curl -sSL https://raw.githubusercontent.com/urbancompasspony/server/refs/heads/main/CDN/01-Restore_BKP | bash ; urgencies0 ;;
2) clear ; curl -sSL https://raw.githubusercontent.com/urbancompasspony/server/refs/heads/main/CDN/02-Restore_Cloud | bash ; urgencies0 ;;
3) clear ; curl -sSL https://raw.githubusercontent.com/urbancompasspony/server/refs/heads/main/CDN/03-Backup_All_CDN | bash ; urgencies0 ;;
4) clear ; curl -sSL https://raw.githubusercontent.com/urbancompasspony/server/refs/heads/main/VM/Backup.sh | sudo bash ; urgencies0 ;;
5) clear ; curl -sSL https://raw.githubusercontent.com/urbancompasspony/server/refs/heads/main/CDN/ReDo/2-Restore_Total.sh | sudo bash ; urgencies0 ;;
6) clear ; curl -sSL https://raw.githubusercontent.com/urbancompasspony/server/refs/heads/main/VM/Restore.sh | sudo bash ; urgencies0 ;;
X) echo "." >/dev/null ;;
esac
}

urgencies0

exit 0
