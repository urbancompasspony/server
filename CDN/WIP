  datetime1=$(yq -r '.Informacoes.Data_Instalacao' "$YAML_FILE")
  [ "$datetime1" = null ] && {
    datetime0=$(date +"%d/%m/%Y - %H:%M")
    sudo yq -i ".Informacoes.Data_Instalacao = \"${datetime0}\"" /srv/system.yaml
    sudo yq -i ".Informacoes.Data_Restauracao = \"Nunca foi reinstalado.\"" /srv/system.yaml
  } || {
    
  }


# =============================================================================
# EXEMPLO DE SCRIPT INDEPENDENTE PARA APLICAR HOSTNAME DO YAML
# =============================================================================

function auto_apply_hostname_if_needed {
  local current_hostname=$(hostname)
  local yaml_hostname=$(get_hostname_from_yaml)
  
  # Se n√£o h√° hostname definido no YAML, n√£o faz nada
  if [ -z "$yaml_hostname" ]; then
    echo "‚ÑπÔ∏è  Hostname n√£o definido no system.yaml - pulando configura√ß√£o autom√°tica"
    return 0
  fi
  
  # Se j√° est√° sincronizado, n√£o faz nada
  if [ "$current_hostname" = "$yaml_hostname" ]; then
    echo "‚úÖ Hostname j√° est√° sincronizado: $current_hostname"
    return 0
  fi
  
  # Se hostname atual √© "ubuntu" ou similar (padr√£o), aplica automaticamente
  if [[ "$current_hostname" =~ ^(ubuntu|debian|localhost)$ ]]; then
    echo "üîÑ Aplicando hostname do system.yaml automaticamente..."
    echo "   De: $current_hostname"
    echo "   Para: $yaml_hostname"
    
    # Aplica sem dialog (para uso em scripts de inicializa√ß√£o)
    if hostnamectl set-hostname "$yaml_hostname" 2>/dev/null; then
      echo "$yaml_hostname" | tee /etc/hostname > /dev/null
      
      # Atualiza /etc/hosts
      sed -i "/$current_hostname/d" /etc/hosts
      if ! grep -q "127.0.0.1.*$yaml_hostname" /etc/hosts; then
        sed -i "1a\\127.0.0.1\t$yaml_hostname" /etc/hosts
      fi
      if ! grep -q "127.0.1.1.*$yaml_hostname" /etc/hosts; then
        sed -i "/127.0.0.1.*$yaml_hostname/a\\127.0.1.1\t$yaml_hostname" /etc/hosts
      fi
      
      echo "‚úÖ Hostname aplicado com sucesso!"
      return 0
    else
      echo "‚ùå Falha ao aplicar hostname automaticamente"
      return 1
    fi
  else
    echo "‚ö†Ô∏è  Hostname atual ($current_hostname) difere do YAML ($yaml_hostname)"
    echo "   Use o menu de gerenciamento para aplicar manualmente"
    return 1
  fi
}

# Esta fun√ß√£o pode ser chamada em scripts de inicializa√ß√£o ou no .bashrc
# para aplicar automaticamente o hostname do YAML em novos sistemas
