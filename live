A) menu19 ;;
B) menu20 ;;
C) sudo /home/ubuntu/.Ghost/Ghost; m10 ;;
D) menu18 ;;
G) menu17 ;;
H) sudo testdisk ; m10 ;;
I) menu28 ;;
J) menu29 ;;
K) menu30 ;;
