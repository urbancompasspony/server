var6=$(dialog --title 'Ferramentas' --backtitle "$bktitle" --menu " " 0 0 0 \
A 'rDesktop' \
B 'Encerrar rDesktop' \
C 'Placas de Rede' \
D 'Stress' \
E '*Speed Test' \
F '*Arp-Scan' \
G '*IP Neigh' \
H '*Who Is' \
I '*Trace Route' \
J '*Ping DNS' \
K 'Definir Relatórios' \
L 'Relatórios Salvos' \
X 'Voltar' 2>&1 > /dev/tty )
[ $? -ne 0 ] && liminal "st4rt1" "start"
case "$var6" in
A) menu04 ;;
B) killall rdesktop ; menu05 ;;
C) menu21 ;;
D) stress -c 16; m10 ;;
E) menu050 ;;
F) menu0501 ;;
G) menu23 ;;
H) menu051 ;;
I) menu052 ;;
J) menu22 ;;
K) menu054 ;;
L) menu055 ;;
X) liminal "st4rt1" "start" ;;
esac
}

