case "$var41" in
A) check_group ; group_tools ;;
B) create_group ; group_tools ;;
C) show_groups ; group_tools ;;
D) show_user_group ; group_tools ;;
E) add_group_group ; group_tools ;;
F) rm_group_group ; group_tools ;;
G) mv_group_ou ; group_tools ;;
H) rm_group ; group_tools ;;
X) echo "." > /dev/null ;;
esac
}

function pc_tools {
var41=$(dialog --title "$ttitle" --backtitle "Ferramentas de Computadores" --menu " " 0 0 0 \
A 'Procurar/Verificar um Computador' \
B 'Exibir todos os Computadores' \
