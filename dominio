#!/bin/bash

# NEW ADMX!

admxw10="https://download.microsoft.com/download/2/E/3/2E3A1E42-8F50-4396-9E7E-76209EA4F429/Windows10-ADMX.msi"
admxw11="https://download.microsoft.com/download/8/d/d/8ddd685d-7d55-42e2-9555-6ab365050734/Administrative%20Templates%20(.admx)%20for%20Windows%2011%20September%202022%20Update.msi"

# ============================================================================ #

export NEEDRESTART_MODE=a
export DEBIAN_FRONTEND=noninteractive

export bktitle="Active Directory & Domain Controller"
export ttitle=" Server Menu v7.0 "

export PathFolder0

function main_menu {
  var4=$(dialog --title "$ttitle" --backtitle "$bktitle" --menu " " 0 0 0 \
  A 'Ferramentas de Usuarios' \
  B 'Ferramentas de Grupos' \
  C 'Ferramentas de Computadores' \
  D 'Gestao de Pastas Compartilhadas' \
  E 'Unidades Organizacionais' \
  F 'Informacoes do Dominio' \
  G 'Manutencao Geral do Dominio' \
  X 'Sair' 2>&1 > /dev/tty )
  [ $? -ne 0 ] && exit
  case "$var4" in
  A) user_tools ; main_menu ;;
  B) group_tools ; main_menu ;;
  C) pc_tools ; main_menu ;;
  D) shared_folders ; main_menu ;;
  E) ou_tools ; main_menu ;;
  F) info_domain ; main_menu ;;
  G) s_settings ; main_menu ;;
  X) exit ;;
  esac
}

function user_tools {
var41=$(dialog --title "$ttitle" --backtitle "Ferramentas de Usuarios" --menu " " 0 0 0 \
A 'Procurar/Verificar um Usuario' \
B 'Criar Usuario' \
C 'Exibir todos os Usuarios' \
D 'Bloquear Usuario' \
E 'Desbloquear Usuario' \
F 'Adicionar Usuario a um Grupo' \
G 'Exibir Grupos de Usuario' \
H 'Remover Usuario de um Grupo' \
I 'Promote Usuario a Admin' \
J 'Demote Usuario de Admin' \
K 'Alterar Senha de um Usuario' \
L 'Testar Senha de Usuario' \
M 'Senha de Usuario deve Expirar?' \
N 'Quando a Senha vai Expirar?' \
O 'Forcar Troca de Senha Imediata!' \
P 'Mover Usuario para OU' \
Q 'Excluir um Usuario' \
X '<' 2>&1 > /dev/tty )
[ $? -ne 0 ] && return
case "$var41" in
A) check_user ; user_tools ;;
B) create_user ; user_tools ;;
C) show_users ; user_tools ;;
D) blk_user ; user_tools ;;
E) ublk_user ; user_tools ;;
F) add_user_group ; user_tools ;;
G) show_group_user ; user_tools ;;
H) rm_user_group ; user_tools ;;
I) promote_user ; user_tools ;;
J) demote_user ; user_tools ;;
K) change_pass ; user_tools ;;
L) test_pass ; user_tools ;;
M) expiracy_usr_pass ; user_tools ;;
N) expiracy_days ; user_tools ;;
O) expiracy_now ; user_tools ;;
P) mv_user_ou ; user_tools ;; 
Q) rm_user ; user_tools ;;
X) echo "." >/dev/null ;;
esac
}

