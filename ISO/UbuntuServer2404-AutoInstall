1)
sudo apt install p7zip-full p7zip 7zip wget xorriso

2)
mkdir u2404-autoinstall-ISO; cd u2404-autoinstall-ISO; wget https://releases.ubuntu.com/24.04/ubuntu-24.04.3-live-server-amd64.iso

3)
7z -y x ubuntu-24.04.3-live-server-amd64.iso -osource-files

4)
cd source-files; mv  '[BOOT]' ../BOOT

5)
cd ..; nano source-files/boot/grub/grub.cfg

set timeout=30
loadfont unicode
set menu_color_normal=white/black
set menu_color_highlight=black/light-gray
menuentry "Instalar automaticamente o Ubuntu Server 24.04 LTS" {
    set gfxpayload=keep
    linux   /casper/vmlinuz autoinstall ds=nocloud\;s=/cdrom/server/  ---
    initrd  /casper/initrd
}
menuentry "Teste ou instale manualmente o Ubuntu Server 24.04 LTS" {
        set gfxpayload=keep
        linux   /casper/vmlinuz  ---
        initrd  /casper/initrd
}
menuentry "Reiniciar sistema" {reboot}
menuentry "Desligar sistema" {halt}
grub_platform

#quiet antes de autoinstall se necessario

6)
mkdir source-files/server; touch source-files/server/meta-data

nano source-files/server/user-data
#cloud-config
autoinstall:
  version: 1
  interactive-sections:
   - storage
  locale: en_US.UTF-8
  timezone: America/Bahia
  keyboard:
    layout: br
  identity:
    username: administrador
    hostname: ubuntu-server
    password: $6$LEK7PAkjOFTjik2o$dZZJwvayF8rh1bFUPXU1vmXAu8EMCHJPhgLwaLdjEnP/sRRiZ4JdYgXXATpHLKhHkja31S8umlbW9uRjualO/0
  ssh:
    allow-pw: true
    install-server: true
  apt:
    primary:
      - arches: [default]
        uri: http://archive.ubuntu.com/ubuntu/
    geoip: false
  package_update: true
  packages:
    - build-essential
    - dialog
    - curl
    - wget
  package_upgrade: true
  late-commands:
    - echo "=== INICIO CUSTOM SETUP ===" >> /target/var/log/custom-install.log
    - echo 'administrador ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/99-installer-temp
    - chmod 0440 /target/etc/sudoers.d/99-installer-temp
    - echo "Sudoers criado" >> /target/var/log/custom-install.log
    - curtin in-target --target=/target -- curl -sSL m.linuxuniverse.com.br -o /tmp/setup.sh
    - echo "Script baixado" >> /target/var/log/custom-install.log
    - curtin in-target --target=/target -- chmod +x /tmp/setup.sh
    - curtin in-target --target=/target -- su - administrador -c "bash /tmp/setup.sh" 2>&1 | tee -a /target/var/log/custom-install.log
    - rm -f /target/etc/sudoers.d/99-installer-temp
    - echo "=== FIM CUSTOM SETUP ===" >> /target/var/log/custom-install.log

# password: ubuntu
# change it after install plz

7)
xorriso -indev ubuntu-24.04.3-live-server-amd64.iso -report_el_torito as_mkisofs

8)
cd source-files; xorriso -as mkisofs -r \
  -V 'Ubuntu 24.04 LTS AUTO INSTALLER' \
  -o ../ubuntu-server-24.04-auto-installer.iso \
  --grub2-mbr ../BOOT/1-Boot-NoEmul.img \
  -partition_offset 16 \
  --mbr-force-bootable \
  -append_partition 2 28732ac11ff8d211ba4b00a0c93ec93b ../BOOT/2-Boot-NoEmul.img \
  -appended_part_as_gpt \
  -iso_mbr_part_type a2a0d0ebe5b9334487c068b6b72699c7 \
  -c '/boot.catalog' \
  -b '/boot/grub/i386-pc/eltorito.img' \
    -no-emul-boot -boot-load-size 4 -boot-info-table --grub2-boot-info \
  -eltorito-alt-boot \
  -e '--interval:appended_partition_2:::' \
  -no-emul-boot \
  .

THERE IS A DOT AT THE END!

9) 
cd ..; sudo cp ubuntu-server-24.04-auto-installer.iso /mnt/md0/Particular/ISOs/1-Server/

sudo cp ~/u2404-autoinstall-ISO/u2404-autoinstall-ISO/u2404-autoinstall-ISO/u2404-autoinstall-ISO/ubuntu-server-24.04-auto-installer.iso ~/
sudo cp ../ubuntu-server-24.04-auto-installer.iso /var/lib/libvirt/images/

Enjoy!
